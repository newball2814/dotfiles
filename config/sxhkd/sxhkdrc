# Apps
super + shift + Return
  alacritty

super + shift + d
  rofi -show drun -show-icons

super + @b
  firefox

# Screenshot
Print
  sh $HOME/.config/rofi/sh ss

super + Print
  sleep 1; flameshot gui

# Workspaces
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'paces 

super + p
  sh $HOME/.config/rofi/sh pm

super + control + r
  bspc wm -r

# Hardware
XF86AudioRaiseVolume 
  pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume 
  pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86MonBrightnessUp
  xbacklight +5
XF86MonBrightnessDown
  xbacklight -5

# Window Management
super + Tab
  bspc node -t {floating,tiled}

super + shift + q
  bspc node -{c,k}

alt + Tab
  bspc node -f next.local.!hidden.window

super + {Up,Down,Left,Right}
  {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }

super + shift + {Up,Down,Left,Right}
  bspc node -s {north,south,west,east}

super + shift + f
  bspc node -t \~fullscreen

super + m 
  bspc desktop -l next

super + alt + e 
  bash ~/discord-emote-menu/emote.sh -r ~/discord-emote-menu/sample.rofi

super + alt + n
  bash ~/rofi-network-manager/rofi-network-manager.sh
